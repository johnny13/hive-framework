<section role="region" itemscope itemtype="http://schema.org/WebSite">
    <h4>Search</h4>
    <meta itemprop="url" content="<txp:site_url />">
    <form role="search" method="get" action="<txp:site_url />" itemprop="potentialAction" itemscope itemtype="http://schema.org/SearchAction">
        <meta itemprop="target" content="<txp:site_url />search?q={q}">
        <p>
            <input name="q" type="search" itemprop="query-input"<txp:if_search> value="<txp:search_term />"</txp:if_search>>
            <input type="submit" value="Go">
        </p>
    </form>
</section>
